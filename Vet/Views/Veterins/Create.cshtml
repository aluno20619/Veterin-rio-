@model Vet.Models.Veterin

@{
    ViewData["Title"] = "Cr~iar Veterinario";
}

<h1>Criar novo Veterinario</h1>

<h4>Veterinario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumCedulaProf" class="control-label"></label>
                <input asp-for="NumCedulaProf" class="form-control" />
                <span asp-validation-for="NumCedulaProf" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Fotografia" class="control-label"></label>
                @*<input asp-for="Fotografia" class="form-control" />*@
            <input type="file" name="FotoVet" accept=".jpg,.png" style="color:blueviolet"/>

                <span asp-validation-for="Fotografia" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
